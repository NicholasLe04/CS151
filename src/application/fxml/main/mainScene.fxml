<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane styleClass="mainRoot" xmlns:fx="http://javafx.com/fxml" fx:controller="application.controller.main.MainController" stylesheets="@mainScene.css">	
	<userData>
		<fx:reference source="controller" />
	</userData>
	<top>
		<HBox styleClass="mainHeader">
			<Label styleClass="mainTitleLabel">Projects</Label>
		</HBox>
	</top>
	<center>
		<FlowPane minWidth="0" fx:id="projectGrid" styleClass="mainProjectGrid" hgap="20" vgap="20" />
	</center>
	<bottom>
		<Button fx:id="createProjectButton" styleClass="mainNewProjectButton" onAction="#showCreateProjectDialog">+</Button>
	</bottom>
</BorderPane>