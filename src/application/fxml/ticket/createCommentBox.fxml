<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE project>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>

<VBox styleClass="createCommentRoot" xmlns:fx="http://javafx.com/fxml" fx:controller="application.controller.ticket.CreateCommentController" stylesheets="@createCommentBox.css">
    <VBox>
    	<HBox>
    		<HBox HBox.hgrow="ALWAYS" />
    		<Label fx:id="bodyError" styleClass="errorMessage"></Label>
    	</HBox>
    </VBox>
    <TextArea fx:id="bodyField" styleClass="commentBodyField" />
    <HBox fx:id="buttonBox" styleClass="buttonBox" alignment="BOTTOM_RIGHT">
    	<Button fx:id="cancelButton" styleClass="commentCancelButton" onAction="#closeBox">cancel</Button>
    	<Button fx:id="createButton" styleClass="commentCreateButton" onAction="#createComment">create</Button>
    </HBox>
</VBox>